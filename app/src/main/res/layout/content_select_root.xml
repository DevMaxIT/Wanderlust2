<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.luh.hci.mid2017.wanderlust2.SelectRootActivity"
    tools:showIn="@layout/activity_select_root">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view0"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="15dp">

        <Button
            android:id="@+id/button40"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="bottom|center|end"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Route wählen"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_margin="4dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/uniapp" />

        <Button
            android:id="@+id/info_text0"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="bottom|center|left"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Wegpunkte"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="15dp">

        <Button
            android:id="@+id/button43"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="bottom|center|end"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Route wählen"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_margin="4dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/unihoch" />

        <Button
            android:id="@+id/info_text2"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="bottom|center|left"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Wegpunkte"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="top"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="15dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="bottom|center|end"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Route wählen"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_margin="4dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/unimulltonnen" />

        <Button
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="bottom|center|left"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:text="Wegpunkte"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="12sp" />

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/buttonOwnRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:text="Route Selbsterstellen"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="12sp" />

</LinearLayout>


